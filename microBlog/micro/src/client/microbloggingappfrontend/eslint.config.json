{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    
    "rules": {
    "no-unused-vars": "error",
    "no-console": "error",
    "no-alert": "error",
    "no-debugger": "warn",
   
    "max-lines": ["error", { "max": 350 }],

    "indent": ["warn", 2, { "SwitchCase": 1 }]
    }
}
