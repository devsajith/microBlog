{
 "env": {
   "browser": true,
   "node": true,
   "es2021": true
 },
 "extends": [
   "eslint:recommended"
 ],
 "parserOptions": {
   "ecmaVersion": 2021
 },
 "rules": {
   "indent": ["off", 2],
   "quotes": ["off", "single"],
   "semi": ["off", "always"],
   "no-unused-vars": "error",
   "no-console": "error",
   "no-debugger": "error",
   "no-duplicate-imports": "error",
   "max-lines": ["warn",{
     "max": 400,
     "skipBlankLines": true,
     "skipComments": true
   }]
 }
}
